@model Calculator.Models.calc
@{
    ViewBag.Title = "Index";
}


<html>
<head>
    <body>
        <h2> Simple Calculator </h2>
        <div class="row">
            @using (Html.BeginForm("/Index", "calc", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="number_1">Number_1</label>
                    <input type="text" class="form-control" id="number_1" name="number_1" value="@Model.number_1" />
                </div>
                <div class="form-group">
                    <label for="number_2">Number_2</label>
                    <input type="text" class="form-control" id="number_2" name="number_2" value="@Model.number_2" />
                </div>
                <div class="form-group">
                    <label for="Total">Total</label>
                    <input type="text" class="form-control" id="Total" name="Total" value="@Model.Total" />
                </div>
                <button type="submit" class="btn btn-info" id="add" value="add" name="calculate">+</button>
                <button type="submit" class="btn btn-danger" id="min" value="sub" name="calculate">-</button>
                <button type="submit" class="btn btn-warning" id="mul" value="mul" name="calculate">*</button>
                <button type="submit" class="btn btn-default" id="div" value="div" name="calculate">/</button>
            }

        </div>
    </body>
</head>
</html>
